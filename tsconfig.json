{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "ES2019"],

    "jsx": "react-jsx",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "declaration": true,
    "outDir": "dist",

    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "node"
    ]
  },

  "include": [
    "src",
    ".storybook",
    "plopfile.cjs",
    "**/*.ts",
    "**/*.tsx"
  ]
}
